<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_gradient"
    android:padding="12dp">

    <!-- Navigation Buttons at Bottom -->
    <LinearLayout
        android:id="@+id/navigation_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Navigation Left Button -->
        <ImageButton
            android:id="@+id/nav_previous"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_previous"
            android:scaleType="fitCenter"
            android:contentDescription="이전 시험"
            android:layout_marginEnd="24dp" />

        <!-- Navigation Right Button -->
        <ImageButton
            android:id="@+id/nav_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_next"
            android:scaleType="fitCenter"
            android:contentDescription="다음 시험"
            android:layout_marginStart="24dp" />

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_container"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <!-- D-Day Header with improved styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp">

            <!-- D-Day Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/dday_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D-999"
                    android:textColor="#D63384"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-black"
                    android:minWidth="140dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/star_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textColor="#FFC107"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Enhanced Dot Indicator with better spacing -->
            <TextView
                android:id="@+id/dot_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⬤○○○○○"
                android:textColor="#6C757D"
                android:textSize="12sp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Reduced Spacer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

        <!-- University Name -->
        <TextView
            android:id="@+id/university_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대학명"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp" />

        <!-- Department Name -->
        <TextView
            android:id="@+id/department_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학과명"
            android:textColor="#6C757D"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="2dp" />

        <!-- Exam Date -->
        <TextView
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.12.07"
            android:textColor="#6C757D"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Empty State Layout -->
    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIM 논술"
            android:textColor="#D63384"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모집단위를 추가해주세요"
            android:textColor="#6C757D"
            android:textSize="12sp"
            android:gravity="center"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>